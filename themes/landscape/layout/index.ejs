<!-- Carousel -->

<section class="home section image-slider" id="home">
	<div class="home-slider text-center">
		<div class="swiper-wrapper">
			<div class="swiper-slide video" style="background: url(img/slider/slide2.jpg);">
				
					<div class="video-container">
					  <div class="filter"></div>
					  <video autoplay loop muted playsinline src="/img/cover.mp4" class="fillWidth"></video>
					  <div class="poster hidden">
						<img src="img/slider/slide2.jpg" alt="">
					  </div>
					</div>

				<div class="video-overlay">
					<img src="img/logo-white.png" alt="RT Halliday Stonework logo" class="main-logo">
					<h2 class="home-slider-title-main">
						Expert Stonemasonry
					</h2>
					<div class="home-buttons text-center"> <a href="#works" class="btn btn-lg  btn-primary">our works</a> </div>
					
					<a class="arrow bounce text-center" href="#about"> <span class="ti-mouse"></span> <span class="ti-angle-double-down"></span> </a>
				</div>
			</div>

			<div class="swiper-slide" style="background: url(img/slider/slide1.jpg);">
				<h2 class="home-slider-title-main">
					Specialists in Stonework and the undertaking and project management of new builds, barn conversions and renovations.	
				</h2>
				<div class="home-buttons text-center"> <a href="#works" class="btn btn-lg  btn-primary">our works</a> </div>
				<a class="arrow bounce text-center" href="#about"> <span class="ti-mouse"></span> <span class="ti-angle-double-down"></span> </a>
			</div>

		</div>
		<div class="home-pagination"></div>
		<div class="home-slider-next right-arrow-negative"> <span class="ti-arrow-right"></span> </div>
		<div class="home-slider-prev left-arrow-negative"> <span class="ti-arrow-left"></span> </div>
	</div>
</section>
<!-- / Carousel -->


<section class="section-min section">
	<div class="container overflow-hidden">
		<div class="row">
			<div class="col-md-12">
				<h3 class="section-heading">Recent work</h3>
			</div>
			<div class="col-md-12">
				<div class="work-list-slider">
					<ul class="swiper-wrapper work-list work-list-vertical">
                                                
                    <% for (var i in site.data.work) { %>
                        <%- partial('_partial/recentWork', {work: site.data.work[i]}) %>
                    <% } %>	

					</ul>

					<!-- CAROUSEL CONTROLS -->
					<div class="work-list-pagination text-center"></div>
					<div class="work-list-slider-next right-arrow-negative">
						<span class="ti-arrow-right"></span>
					</div>

					<div class="work-list-slider-prev left-arrow-negative">
						<span class="ti-arrow-left"></span>
					</div>
					<!-- CAROUSEL CONTROLS -->
				</div>
			</div>
		</div>

	</div>
</section>

<!-- work MODAL -->
<div class="modal fade work-modal" id="work-01" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        
        <!-- MODAL CONTENT -->
        <div class="modal-content shadow">
            <a class="close" data-dismiss="modal"> <span class="ti-close"></span></a>
            <div class="modal-body">
                <!-- Wrapper for slides -->
                <div class="carousel slide work-slide" id="work-carousel">
                    <!-- CAROSUEL SLIDER -->
                    <div class="carousel-inner cont-slider">
                        <div class="item active"> <img alt="" src="img/work3.jpg" title=""> </div>
                        <div class="item"> <img alt="" src="img/work4.jpg" title=""> </div>
                        <div class="item"> <img alt="" src="img/work3.jpg" title=""> </div>
                        <div class="item"> <img alt="" src="img/work4.jpg" title=""> </div>
                    </div>
                    <!-- / CAROSUEL SLIDER -->
    
                    <!-- CAROUSEL INDICATORS -->
                    <ol class="carousel-indicators">
                        <li class="active" data-slide-to="0" data-target="#work-carousel"> 
                            <img alt="" src="img/work3.jpg"> 
                        </li>
    
                        <li class="" data-slide-to="1" data-target="#work-carousel"> 
                            <img alt="" src="img/work4.jpg"> 
                        </li>
    
                        <li class="" data-slide-to="2" data-target="#work-carousel"> 
                            <img alt="" src="img/work3.jpg"> 
                        </li>
    
                        <li class="" data-slide-to="3" data-target="#work-carousel"> 
                            <img alt="" src="img/work4.jpg"> 
                        </li>
                    </ol>
                    <!-- / CAROUSEL INDICATORS -->
                </div>
    
            </div>
        </div>
        <!-- / MODAL CONTENT -->
    </div>
    </div>


<section class="container-fluid about white-color no-padding" id="about">
	<div class="about-background row no-margin" style="background-image: url(<%= site.data.home.about.image %>);">
		<div class="col-md-6 about-black-box">
			<h3 class="section-heading">
				<%= site.data.home.about.title %>
			</h3>
			<%- site.data.home.about.content %>
