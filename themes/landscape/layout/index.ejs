		<div class="col-md-4 about-white-box col-md-offset-4">
			<h2 class="section-claim wow fadeInDown" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInDown;">
				<%= site.data.home.project.title %>
			</h2>
			
			<%- site.data.home.project.content %>

			<a href="<%= site.data.home.project.ctaLink %>" class="btn btn-default">
				<%= site.data.home.project.ctaText %>
			</a>
				
		</div>
		<div class="col-md-4"></div>
	</div>

	<div class="about-background row no-margin" style="background-image: url(<%= site.data.home.stonework.image %>);">
		<div class="col-md-6 about-black-box col-md-offset-6">
			<h3 class="section-heading">
				<%= site.data.home.stonework.title %>
			</h3>

			<%- site.data.home.stonework.content %>

			<a href="<%= site.data.home.stonework.ctaLink %>" class="btn btn-default">
				<%= site.data.home.stonework.ctaText %>
			</a>
		</div>
	</div>
</section>

<section class="testimonials" id="testimonials">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
